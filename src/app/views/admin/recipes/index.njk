{% extends 'layout-admin.njk' %}

{% block header %}
  <a href="/admin/receitas"><span class="selected">RECEITAS</span></a>
  <a href="/admin/chefs"><span>CHEFS</span></a>
  <a href="/admin/usuarios"><span>USU√ÅRIOS</span></a>
{% endblock header %}

{% block content %}
  <div>
    <a href="/admin/receitas/criar" class="create-recipe">Criar receita</a>
    <h2 style="margin-bottom: 50px">Gerenciar receitas</h2>
  </div>
  <div class="recipes-adminview">
    {% for recipe in recipes %}
    <div class="recipe-adminview">
      <img src="{{recipe.image.src}}" alt="Imagem de {{recipe.title}}">
      <div>
        <span>{{recipe.title}}</span>
        <p>{{recipe.author}}</p>
        <a href="/admin/receitas/{{recipe.id}}" class="more-detail">Visualizar</a>
      </div>
    </div>
    {% endfor %}
  </div>
{% endblock content %}}