{% extends 'layout.njk' %}

{% block menu_options %}
  <a href="/sobre">Sobre</a>
  <a href="/receitas"><strong>Receitas</strong></a>
  <a href="/chefs">Chefs</a>
  <a href="/login"><button>Entrar</button></a>
{% endblock menu_options %}

{% block content %}
  <div class="recipe-detail">
    <div class="recipe-gallery">
      <div class="highlight">
        <img src="{{files[0].src}}" alt="recipe.title" class="highlighted">
      </div>
      <div class="gallery-preview">
      {% for image in files %}
        <img 
          src="{{image.src}}" 
          alt="{{recipe.title}}"
          {% if loop.index0 == 0 %}
          class="selected"
          {% endif %}
          onclick="ImageGallery.setImage(event)"
        >
      {% endfor %}
      </div>
    </div>
    
    <div class="recipe-title">
      <h1>{{recipe.title}}</h1>
      <span>por {{recipe.author}}</span>
    </div>

    <section class="ingredients">
      <span class="sub-title">Ingredientes:</span> 
      <span class="show-subtitle-content">ESCONDER:</span> 
      <div class="sub-content" id="ingredient-content">
        <ul class="recipe-lists">
          {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}};</li>
          {% endfor %}
        </ul>
      </div>
    </section>

    <section class="preparation-method">
      <span class="sub-title">Modo de preparo:</span>
      <span class="show-subtitle-content">ESCONDER:</span> 
      <div class="sub-content" id="preparation-content">
        <ul class="recipe-lists">
          {% for step in recipe.preparation %}
            <li>{{step}};</li>
          {% endfor %}
        </ul>
      </div>
    </section>

    <section class="additional-information">
      <span class="sub-title">Informações adicionais:</span>
      <span class="show-subtitle-content">ESCONDER:</span> 
      <div class="sub-content" id="information-content">
        <p>{{recipe.information}}</p>
      </div>
    </section>
  </div>
{% endblock content %}